@model List<Proyecto_PortafolioEPIS.Models.Tbl_PlanEstudio>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>Agregar Plan de Estudio</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index"><i class="zmdi zmdi-home"></i> Portafolio EPIS</a></li>
                <li class="breadcrumb-item">Plan de Estudio</li>
                <li class="breadcrumb-item active">Listar Plan de Estudio</li>
            </ul>
            <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
        </div>
    </div>
</div>

<div class="container-fluid">

    <!-- Multi Column -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card">
                <div class="header">
                    <h2><strong>Mantenimiento</strong> Plan de Estudio</h2>
                    <ul class="header-dropdown">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else</a></li>
                            </ul>
                        </li>
                        <li class="remove">
                            <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                        </li>
                    </ul>
                </div>

                <div class="body js-sweetalert">

                    <h2 class="card" text-center>Gestion de Plan de Estudio</h2>

                    <br />
                    <div class="text-right">
                        <a href="~/PlanEstudio/Agregar/" class="btn btn-secondary text-right">Nuevo Registro</a>
                    </div>
                    <br />

                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width:50px">Codigo</th>
                                <th style="width:50px">Codigo Semestre</th>
                                <th style="width:100px">Nombre</th>
                                <th style="width:70px">Fecha Inicio</th>
                                <th style="width:80px">Fecha Fin</th>
                                <th style="width:80px">Estado</th>
                                <th style="width:200px">Acciones</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                            <tr>
                                <th>@(p.Codigo_PlanEstudio)</th>
                                <th>@(p.Nombre_PlanEstudio)</th>
                                <th>@(p.Codigo_Semestre)</th>
                                <th>@(p.Nombre_PlanEstudio)</th>
                                <th>@(p.FechaInicio_PlanEstudio)</th>
                                <th>@(p.FechaFin_PlanEstudio)</th>
                                <th>@(p.Estado_PlanEstudio == "A" ? "Activo" : "Inactivo")</th>

                                <th style="text-align:center;">
                                    <a href="~/PlanEstudio/Visualizar/@p.Codigo_PlanEstudio" class="btn btn-xs btn-warning">Visualizar</a>
                                    <a href="~/PlanEstudio/Agregar/@p.Codigo_PlanEstudio" class="btn btn-xs btn-primary">Modificar</a>
                                </th>

                            </tr>
                            }
                        </tbody>

                    </table>
                </div>

                </div>

            </div>

    </div>
</div>