@model Proyecto_PortafolioEPIS.Models.Tbl_PlanEstudio
@{
    ViewBag.Title = "Agregar";
    //Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="block-header">
    <div class="row">
        <div class="col-lg-7 col-md-6 col-sm-12">
            <h2>Agregar Plan de Estudio</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Home/Index"><i class="zmdi zmdi-home"></i> Portafolio EPIS</a></li>
                <li class="breadcrumb-item">Plan de Estudio</li>
                <li class="breadcrumb-item active">@(Model.Codigo_PlanEstudio > 0 ? Model.Nombre_PlanEstudio : "Nuevo Registro")</li>
            </ul>
            <button class="btn btn-primary btn-icon mobile_menu" type="button"><i class="zmdi zmdi-sort-amount-desc"></i></button>
        </div>
        <div class="col-lg-5 col-md-6 col-sm-12">
            <button class="btn btn-primary btn-icon float-right right_icon_toggle_btn" type="button"><i class="zmdi zmdi-arrow-right"></i></button>
        </div>
    </div>
</div>
@using (Html.BeginForm("Guardar", "PlanEstudio", FormMethod.Post, new { id = "frm-semestre" }))
{
    @Html.HiddenFor(x => x.Codigo_PlanEstudio)
    <div class="container-fluid">

        <!-- Multi Column -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Mantenimiento</strong> Plan de Estudio</h2>
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else</a></li>
                                </ul>
                            </li>
                            <li class="remove">
                                <a role="button" class="boxs-close"><i class="zmdi zmdi-close"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="body js-sweetalert">
                        <form>
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <label for="email_address">Semestre Id:</label>
                                    <div class="form-group">
                                        <select class="form-control show-tick ms select2" data-placeholder="Seleccionar Semestre">
                                            <option></option>
                                            <option>@Html.TextBoxFor(x => x.Codigo_Semestre, new { @class = "form-control", disabled = true })</option>
                                         
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email_address">Nombre Plan de Estudio:</label>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Plan de Estudio">
                                        @Html.TextBoxFor(x => x.Nombre_PlanEstudio, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <label for="email_address">Seleccionar Fecha Inicio:</label>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="zmdi zmdi-calendar"></i></span>
                                        </div>
                                        <input type="text" class="form-control datepicker" placeholder="Seleccionar Fecha Inicio.">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email_address">Seleccionar Fecha Fin:</label>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="zmdi zmdi-calendar"></i></span>
                                        </div>
                                        <input type="text" class="form-control datepicker" placeholder="Seleccionar Fecha Fin.">
                                    </div>
                                </div>

                            </div>
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <label for="email_address">Total Cursos Obligatorios:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email_address">Total Cursos Electivos:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <label for="email_address">Total Créditos Obligatorios:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email_address">Total Créditos Electivos:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <label for="email_address">Total Créditos Extracurriculares:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="email_address">Total Créditos Prácticas:</label>
                                    <div class="form-group">
                                        <div class="input-group spinner" data-trigger="spinner">
                                            <input type="text" class="form-control text-center" value="1" data-rule="quantity">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="javascript:void(0);" class="spin-up" data-spin="up"><i class="zmdi zmdi-caret-up"></i></a>
                                                    <a href="javascript:void(0);" class="spin-down" data-spin="down"><i class="zmdi zmdi-caret-down"></i></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-md-12">
                                    <label for="email_address">Estado:</label>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <input id="remember_me" type="checkbox">
                                            <label for="remember_me">
                                                Activar o desactivar
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row clearfix">
                                <div class="col-lg-12 col-md-12 col-sm-12">

                                </div>
                                <button type="button" class="btn btn-raised btn-primary btn-round waves-effect m-l-20" data-type="success">AGREGAR</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
}